{% extends '::base.html.twig' %}

{% block body -%}
    <h1>StudyQuestions</h1>

    <table class="record_properties">
        <tbody>
  <!--          <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr> -->
            <tr>
                <th>Question</th>
                <td>{{ entity.question }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('studyquestions') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('studyquestions_edit', { 'id': entity.id }) }}">
            Edit question
        </a>
    </li>
    <li>
        <form action="{{ path('studyquestions_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete question</button>
        </form>
    </li>
</ul>
{% endblock %}

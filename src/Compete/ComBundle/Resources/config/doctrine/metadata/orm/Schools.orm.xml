<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Schools" table="schools">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="100" nullable="true"/>
    <field name="address" type="string" column="address" length="100" nullable="true"/>
    <field name="city" type="string" column="city" length="100" nullable="true"/>
    <field name="country" type="string" column="country" length="100" nullable="true"/>
    <field name="password" type="string" column="password" length="30" nullable="true"/>
    <field name="picture" type="string" column="picture" length="100" nullable="true"/>
    <field name="email" type="string" column="email" length="30" nullable="true"/>
    <field name="website" type="string" column="website" length="30" nullable="true"/>
    <field name="reported" type="string" column="reported" length="1" nullable="true"/>
    <field name="legalPaperScan" type="string" column="legal_paper_scan" length="150" nullable="false"/>
    <field name="isActive" type="integer" column="is_active" nullable="false"/>
    <many-to-one field="admin" target-entity="Users">
      <join-columns>
        <join-column name="admin_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="TournamentQuestions" table="tournament_questions">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="question" type="string" column="question" length="300" nullable="true"/>
    <field name="type" type="string" column="type" length="20" nullable="false"/>
    <field name="approved" type="integer" column="approved" nullable="true"/>
    <field name="isActive" type="string" column="is_active" length="1" nullable="true"/>
    <many-to-one field="subj" target-entity="Subjects">
      <join-columns>
        <join-column name="subj_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="grade" target-entity="Grades">
      <join-columns>
        <join-column name="grade_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
